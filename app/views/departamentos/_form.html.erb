<%= simple_form_for @departamento, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :nome %>
  <%= f.input :abreviatura %>
  <%= f.input :andar %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                departamentos_path, :class => 'btn' %>
  </div>
<% end %>
